{
    "name": "lanlin/nylas-php",
    "description": "Nylas PHP SDK (api version 2.1)",
    "license": "MIT",
    "authors" : [
        {
          "name": "lanlin",
          "email": "lanlin1987@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "guzzlehttp/guzzle": ">=6.5",
        "respect/validation": "^2.0",
        "zbateson/mail-mime-parser": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2"
    },
    "autoload": {
        "psr-4": {
            "Nylas\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nylas\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --configuration tests/phpunit.xml --do-not-cache-result"
    }
}
